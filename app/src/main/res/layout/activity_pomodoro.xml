<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:timer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <io.github.krtkush.lineartimer.LinearTimerView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        timer:initialColor="@color/colorAccent"
        timer:progressColor="@color/white"
        timer:radius="@dimen/timer_radius"
        timer:strokeWidth="@dimen/timer_stroke" />

    <ImageButton
        android:id="@+id/control_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_play_arrow_24dp" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/timer_font"
        android:layout_marginBottom="@dimen/timer_text_margin"
        android:text="@string/timer_placeholder" />

</RelativeLayout>
