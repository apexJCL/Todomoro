<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <flepsik.github.com.progress_ring.ProgressRingView
        android:id="@+id/progressRingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp" />

    <ImageView
        android:id="@+id/control_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:src="@drawable/ic_play_arrow_24dp" />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/countdownView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/countdown_height"
        android:layout_alignParentBottom="true"
        app:isShowMillisecond="true"
        app:suffixGravity="bottom"
        app:suffixMinute="@string/minute"
        app:suffixSecond="@string/seconds"
        app:suffixTextColor="@color/blue"
        app:suffixTextSize="@dimen/suffix_text"
        app:timeTextColor="@color/white"
        app:timeTextSize="@dimen/chronometer_font" />

</RelativeLayout>
